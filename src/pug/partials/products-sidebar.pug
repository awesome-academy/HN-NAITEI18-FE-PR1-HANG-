mixin productsSidebar 
    .products-sidebar 
        .products-sidebar__categories 
            +sidebarTitle('Danh mục sản phẩm', 'categories-collapse').products-sidebar__title
            +sidebarList(categories)#categories-collapse
        .products-sidebar__prices 
            +sidebarTitle('Tìm theo giá', 'prices-collapse').products-sidebar__title
            +sidebarList(prices)#prices-collapse
        .products-sidebar__colors 
            +sidebarTitle('Tìm theo màu', 'colors-collapse').products-sidebar__title
            #colors-collapse.sidebar-list
                .products-sidebar__list.d-flex.flex-wrap.text-taupe-gray.display-12px
                    each color in colors 
                        .products-sidebar__color.w-50.d-flex.align-items-center
                            span.products-sidebar__color-display.rounded-circle.d-inline-block(class="bg-" + color.color)
                            span= color.name
