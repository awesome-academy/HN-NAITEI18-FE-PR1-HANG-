mixin sameProducts(sameProducts)
    .same-products 
        .same-products__title 
            +title('Sản phẩm cùng loại')
        .same-products__list.row
            each sameProduct in sameProducts 
                .col.col-12.col-md-6.col-lg-3
                    +productCard(sameProduct.img, sameProduct.title, sameProduct.price)
