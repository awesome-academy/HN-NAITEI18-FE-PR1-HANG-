extends ../layouts/default-layout

include ../partials/news-sidebar

block header 
    +header('Tin tá»©c')

block content
    +breadcrumb(newsListBreadcrumbItems)
    .news.container
        .row 
            .col.col-12.col-lg-3
                +newsSidebar
            .col.col-12.col-lg-9 
                .news__list.d-flex.flex-column 
                    each newsItem in newsList 
                        a.news__item.text-decoration-none(href=newsItem.href) 
                            +newsTitle(newsItem.title)
                            +newsCaption(newsItem).news__caption
                            img.w-100.object-fit-cover(src="./assets/images/" + newsItem.img, alt=newsItem.title)
                            p.news__description.display-12px.text-taupe-gray.mb-0= newsItem.description
                .news__pagination.d-flex.justify-content-center.justify-content-sm-end 
                    +pagination(4)
