extends ../layouts/default-layout

include ../partials/news-sidebar
include ../partials/comments
include ../partials/comment-form

block header 
    +header('Tin tức')

block content
    +breadcrumb(newsListBreadcrumbItems)
    .news-detail.container
        .row 
            .col.col-12.col-lg-3
                +newsSidebar
            .col.col-12.col-lg-9.display-12px 
                +newsTitle('Cách bố trí hoa chậu trước cửa ấn tượng ngay lần đầu tiên').news-detail__title
                +newsCaption(newsCaption).news-detail__caption
                .news-detail__content
                    img.news-detail__img.w-100.object-fit-cover(src="./assets/images/news-list-0.png", alt="Cách bố trí hoa chậu trước cửa ấn tượng ngay lần đầu tiên")
                    p.news-detail__description Như thể hiện sự thân thiện cũng như sự hiếu khách của gia chủ, phần không gian trước cửa nhà luôn được đầu tư và trang trí khá bắt mắt. Cũng có thể nói đây là bộ mặt của ngôi nhà, là ấn tượng đầu tiên khzi một vị khách ghé chơi nhà bạn đấy. Hãy cùng Sài Gòn Hoa tham khảo một vài cách bố trí chậu cây hoa cảnh ngay trước cửa nhà sao cho ấn tượng nhất nhé!

                    p.news-detail__description 7 loại cây xanh để bàn đang được giới văn phòng ưa chuộng, Những mẫu cây để bàn đang được giới văn phòng ưa chuộng, cây cảnh văn phòng để bàn thông dụng, những cây cảnh được giới văn phòng ưa chuộng

                    p.news-detail__description Cây bạch mã hoàng tử để bàn có chiều cao trung bình từ 20 – 40cm, dáng đẹp, lá cây màu xanh đậm với những đường vân vàng nhạt mọc đối xứng nhau trông rất sang trọng và lịch lãm.

                    p.news-detail__description Loại cây này ưa bóng, chịu được nhiệt độ thấp lại có khả năng tạo ẩm và thanh lọc không khí nên rất thích hợp đặt trong văn phòng làm việc có máy lạnh.

                    p.news-detail__description Cây bạch mã hoàng tử thường được chọn để đặt trên bàn làm việc của sếp, bàn nhỏ ở phòng tiếp khách hoặc bàn làm việc của các đấng mày râu.

                    p.news-detail__description 2. Cây trầu bà đế vương

                    p.news-detail__description Cây trầu bà đế vương tượng trưng cho quyền uy, phong thái dẫn đầu nên thích hợp để đặt trên bàn làm việc của người lãnh đạo, quản lý doanh nghiệp.

                    p.news-detail__description Lá cây trầu bá đế vương khá to, dày, hơi bóng, đường gân rõ ràng, có hình dạng như hình trái tim, xòe rộng hướng lên trên trông rất bệ nghễ và cao sang.

                    p.news-detail__description Tùy thuộc vào sở thích cá nhân và thiết kế chủ đạo của không gian phòng làm việc, bạn có thể chọn loại trầu bà đế vương xanh, trầu bá đế vương vàng hoặc trầu bà đế vương đỏ.
                    img.news-detail__img.w-100.object-fit-cover(src="./assets/images/news-list-5.png", alt="Cách bố trí hoa chậu trước cửa ấn tượng ngay lần đầu tiên")
